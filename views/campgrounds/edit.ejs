<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>

        <div style="width: 30%; margin: 40px auto;">            
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" placeholder="name" value="<%= campground.name %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" placeholder="image url" value="<%= campground.image %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text" placeholder="description" value="<%= campground.description %>" />
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input class="form-control" name="campground[price]" type="text" placeholder="Price" value="<%= campground.price %>" />
                        <span class="input-group-addon">/ night</span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>

    </div>
</div>

<% include ../partials/footer %>
